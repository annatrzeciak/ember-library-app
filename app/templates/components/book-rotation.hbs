<div class="card-pf-body ">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-5 text-right">Title</label>
            <div class="col-sm-7 ">
                {{book.title}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 text-right">Author</label>
            <div class="col-sm-7">
                {{book.author}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 text-right">Release year</label>
            <div class="col-sm-7">
                {{book.releaseYear}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 text-right">ISBN</label>
            <div class="col-sm-7">
                {{book.ISBN}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 text-right">Reader</label>
            <div class="col-sm-7">
                {{#if readers}}
                <select class="form-control btn btn-default" onchange={{action 'selectReader' value="target.value" }}>
                    <option></option>
                    {{#each readers as |reader|}}
                    <option value={{reader.id}}>
                        {{reader.firstName}} {{reader.lastName}}
                        <small> {{reader.id}}</small>
                    </option>
                    {{/each}}
                </select>
                {{else}} {{book.reader.firstName}} {{book.reader.lastName}}
                <small>{{book.reader.id}}</small>
                {{/if}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <button disabled={{if readers isDisabled false}} type="submit" class="btn btn-primary" {{action 'buttonClicked' book selectedReaderId}}>{{buttonLabel}}</button>
            </div>
        </div>
    </div>
</div>